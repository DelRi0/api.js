{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@cennznet/api/*": ["packages/api/src/*"],
      "@cennznet/api": ["packages/api/src/index"],
      "@cennznet/crml-attestation/*": ["packages/crml-attestation/src/*"],
      "@cennznet/crml-attestation": ["packages/crml-attestation/src/index"],
      "@cennznet/crml-cennzx-spot/*": ["packages/crml-cennzx-spot/src/*"],
      "@cennznet/crml-cennzx-spot": ["packages/crml-cennzx-spot/src/index"],
      "@cennznet/crml-generic-asset/*": ["packages/crml-generic-asset/src/*"],
      "@cennznet/crml-generic-asset": ["packages/crml-generic-asset/src/index"],
      "@cennznet/types/*": ["packages/types/src/*"],
      "@cennznet/types": ["packages/types/src/index"],
      "@cennznet/util/*": ["packages/util/src/*"],
      "@cennznet/util": ["packages/util/src/index"],
      "@cennznet/wallet/*": ["packages/wallet/src/*"],
      "@cennznet/wallet": ["packages/wallet/src/index"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  },
  "exclude": ["build/**/*",
    "**/build/**/*"]
}

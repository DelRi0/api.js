{
    "name": "cennznet-api",
    "version": "0.3.1",
    "description": "cennznet's javascript client",
    "keywords": [
        "cennz"
    ],
    "author": "ian.he <ian.he@centrality.ai>",
    "homepage": "https://bitbucket.org/centralitydev/cennznet-js#readme",
    "license": "ISC",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/centralitydev/cennznet-js.git"
    },
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.config.ts",
        "test:e2e": "jest -c ../../jest/jest.config.js",
        "test:watch": "jest -c ../../jest/jest.config.js --watch",
        "doc": "npm run doc:gen && npm run doc:copyReadme",
        "doc:gen": "typedoc --tsconfig tsconfig.json",
        "doc:copyChangeLog": "ncp ./CHANGELOG.md ../../docs/api/CHANGELOG.md",
        "doc:copyReadme": "ncp ./README.md ../../docs/api/README.md"
    },
    "dependencies": {
        "@polkadot/extrinsics": "^0.35.19",
        "@polkadot/rpc-core": "^0.35.19",
        "@polkadot/rpc-provider": "^0.35.19",
        "@polkadot/storage": "^0.35.19",
        "@polkadot/types": "^0.35.19",
        "cennznet-runtime-types": "^0.3.1",
        "cennznet-types": "^0.3.1",
        "cennznet-wallet": "^0.3.1",
        "eventemitter3": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^23.3.5",
        "jest": "^23.6.0",
        "ncp": "^2.0.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.6",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.17.1",
        "typedoc": "^0.13.0",
        "typedoc-plugin-markdown": "^1.1.19",
        "typescript": "^3.1.6"
    }
}

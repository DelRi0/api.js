{
    "name": "cennznet-api",
    "version": "0.4.0",
    "description": "cennznet's javascript client",
    "keywords": [
        "cennz"
    ],
    "author": "ian.he <ian.he@centrality.ai>",
    "homepage": "https://bitbucket.org/centralitydev/cennznet-js#readme",
    "license": "ISC",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/centralitydev/cennznet-js.git"
    },
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.config.ts",
        "test:unit": "jest --coverage -c ./jest.config.js spec",
        "test:unitDebug": "node --inspect-brk ./node_modules/.bin/jest -c ./jest.config.js spec",
        "test:e2e": "jest -c ../../jest/jest.config.js",
        "test:watch": "jest -c ../../jest/jest.config.js --watch",
        "doc": "npx compodoc --tsconfig tsconfig.json --hideGenerator --theme readthedocs --includes compodoc --output ../../docs/api"
    },
    "dependencies": {
        "@polkadot/extrinsics": "^0.39.7",
        "@polkadot/rpc-core": "^0.39.7",
        "@polkadot/rpc-provider": "^0.39.7",
        "@polkadot/storage": "^0.39.7",
        "@polkadot/types": "^0.39.7",
        "cennznet-runtime-types": "^0.4.0",
        "cennznet-types": "^0.4.0",
        "cennznet-wallet": "^0.4.0",
        "eventemitter3": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^23.3.5",
        "jest": "^23.6.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.6",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.17.1",
        "ts-mockito": "^2.3.1",
        "typedoc": "^0.13.0",
        "typedoc-plugin-markdown": "^1.1.19",
        "typescript": "^3.1.6"
    }
}

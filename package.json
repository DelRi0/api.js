{
    "name": "root",
    "private": true,
    "engines": {
        "node": "^10.13.0",
        "yarn": "^1.12.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "polkadot-dev-build-ts",
        "test:unit": "jest -c ./jest/jest.config.js --coverage spec",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r1",
        "make-docs": "typedoc --options typedoc.config.js ."
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.9",
        "@polkadot/dev": "^0.27.1",
        "@types/jest": "^23.3.10",
        "cz-lerna-changelog": "^2.0.2",
        "husky": "^1.1.1",
        "jest": "24.1.0",
        "jest-environment-node": "^24.0.0",
        "lerna": "^3.11.0",
        "prettier": "^1.13.5",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-microsoft-contrib": "^5.2.1",
        "typedoc": "^0.14.2",
        "typedoc-plugin-monorepo": "https://github.com/ianhe8x/typedoc-plugin-monorepo"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "prettier --write 'packages/**/src/**/*'"
        }
    }
}
